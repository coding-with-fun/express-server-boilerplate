{
    "name": "express-server-boilerplate",
    "version": "1.0.0",
    "description": "Boilerplate code for the express server.",
    "main": "src/app.ts",
    "repository": "github.com/harrsh2124/express-server-boilerplate",
    "author": "Harrsh Patel <dev.harrsh@gmail.com>",
    "license": "MIT",
    "private": false,
    "scripts": {
        "dev": "ts-node-dev --respawn --transpile-only --exit-child --watch src/locales src/app.ts | pino-pretty -t='SYS:ddd mmm dd yyyy h:MM:ss TT'",
        "start": "node dist/app.js",
        "format": "prettier --write \"**/*.+(ts|json|yml|yaml|md|hbs)\""
    },
    "dependencies": {
        "compression": "^1.7.4",
        "cors": "^2.8.5",
        "cron": "^2.2.0",
        "dotenv": "^16.0.3",
        "express": "^4.18.2",
        "helmet": "^6.0.1",
        "i18next": "^22.4.9",
        "i18next-fs-backend": "^2.1.1",
        "i18next-http-middleware": "^3.2.2",
        "lodash": "^4.17.21",
        "pino": "^8.8.0"
    },
    "devDependencies": {
        "@types/compression": "^1.7.2",
        "@types/cors": "^2.8.13",
        "@types/cron": "^2.0.0",
        "@types/express": "^4.17.16",
        "@types/i18next-fs-backend": "^1.1.2",
        "@types/lodash": "^4.14.191",
        "@types/node": "^18.11.18",
        "pino-pretty": "^9.1.1",
        "prettier": "^2.8.3",
        "ts-node-dev": "^2.0.0",
        "typescript": "^4.9.4"
    }
}
